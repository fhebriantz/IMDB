<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/juduldetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="judul"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tanggaldetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/juduldetail"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="tanggal"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="49dp" />

    <ImageView
        android:id="@+id/gambardetail"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tanggaldetail"
        android:background="@drawable/common_google_signin_btn_icon_dark" />

    <TextView
        android:id="@+id/overviewdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gambardetail"
        android:padding="10dp"
        android:text="overview" />

    <TextView
        android:id="@+id/ratingdetail"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_above="@+id/gambardetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="7.9" />
</RelativeLayout>